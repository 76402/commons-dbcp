  <dependencies>
    <dependency>
      <id>commons-collections</id>
      <version>2.1</version>
    </dependency>
    <dependency>
      <id>commons-pool</id>
      <version>1.1</version>
    </dependency>
    <dependency>
      <id>jdbc</id>
      <version>2.0</version>
    </dependency>
    <dependency>
